<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="yersih.bayaanul.ui.dialogs.user_dialog.UserDialogController"
            fx:id="userDialogPane">
    <content>
        <GridPane hgap="10" vgap="10">
            <Label fx:id="usernameLabel" text="User Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="100"/>
            <Label fx:id="passwordOneLabel" text="Password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordOneField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100"/>
            <Label fx:id="passwordTwoLabel"  text="Retype Password" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <PasswordField fx:id="passwordTwoField"  GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="100"/>
            <Label text="Post" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="postsChoiceBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="100"/>
            <Label fx:id="oldPasswordLabel"  GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <PasswordField fx:id="oldPasswordField"  GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Button text="Reset Fields" GridPane.rowIndex="5" GridPane.columnIndex="0" onAction="#resetFields"/>
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
        </GridPane>
    </content>
</DialogPane>
